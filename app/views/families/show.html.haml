%h1= @family

%article
  = simple_format @family.description
%footer
  = link_if_can "Edit", :edit, @family, class: "btn btn-warning"
  = link_to new_molecule_path(family_id: @family.id), class: "btn btn-success" do
    %i.icon-plus.icon-white
    Add Molecule
  = link_to toc_path, class: "btn btn-primary" do
    %i.icon-list.icon-white
    Back to Table of Contents
