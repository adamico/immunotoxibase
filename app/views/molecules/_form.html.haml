= content_for :head do
  %script{type: "text/javascript", src: "/javascripts/wymeditor/jquery.wymeditor.min.js"}

= simple_form_for molecule, html: {class: 'form-horizontal'} do |form|
  = form.input :name, input_html: {class: "span8"}
  = form.input :description, input_html: {class: "wymeditor"}
  = form.button :submit, class: "btn-success"
  = submit_tag "Reset", type: :reset, class: "btn btn-danger"
  = link_to "Back to List", molecules_path, class: "btn btn-primary"

:coffeescript
  $(".wymeditor").wymeditor()
  $('input[type=submit]').addClass('wymupdate')
